<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= data.name %>'s Resume</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 40px; line-height: 1.6; font-size: 14px; color: #333; }
    h1 { margin-bottom: 5px; }
    h2 { margin-top: 30px; border-bottom: 1px solid #ccc; padding-bottom: 5px; font-size: 16px; }
    .section { margin-bottom: 20px; }
    .header { text-align: center; margin-bottom: 30px; }
    .header a { color: #333; text-decoration: none; }
    .position, .degree { font-weight: bold; }
    .date-location { float: right; font-style: italic; }
    ul { padding-left: 18px; margin: 0; }
    li { margin-bottom: 6px; }
    .clear { clear: both; }
    .subsection { margin-bottom: 15px; }
    .technologies { font-style: italic; }
    .skills-section { display: flex; flex-wrap: wrap; gap: 20px; }
    .skills-section div { flex: 1; }
  </style>
</head>
<body>

  <div class="header">
    <h1><%= data.name %></h1>
    <div>
      <%= data.phone %> |
      <a href="mailto:<%= data.email %>"><%= data.email %></a> |
      <a href="https://<%= data.linkedin %>"><%= data.linkedin %></a> |
      <a href="https://<%= data.github %>"><%= data.github %></a>
    </div>
  </div>

  <div class="section">
    <h2>EDUCATION</h2>
    <% data.education.forEach(edu => { %>
      <div class="subsection">
        <span class="degree"><%= edu.degree %></span> — <%= edu.institution %>
        <span class="date-location"><%= edu.start_date %> - <%= edu.end_date %> | <%= edu.location %></span>
        <div class="clear"></div>
      </div>
    <% }) %>
  </div>

  <div class="section">
    <h2>EXPERIENCE</h2>
    <% data.experience.forEach(exp => { %>
      <div class="subsection">
        <span class="position"><%= exp.title %></span> — <%= exp.company %>
        <span class="date-location"><%= exp.start_date %> - <%= exp.end_date %> | <%= exp.location %></span>
        <div class="clear"></div>
        <ul>
          <% exp.responsibilities.forEach(bullet => { %>
            <li><%= bullet %></li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>

  <div class="section">
    <h2>PROJECTS</h2>
    <% data.projects.forEach(proj => { %>
      <div class="subsection">
        <strong><%= proj.name %></strong>
        <span class="technologies"> — <%= proj.technologies.join(', ') %></span>
        <ul>
          <% proj.description.forEach(bullet => { %>
            <li><%= bullet %></li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>

  <div class="section">
    <h2>TECHNICAL SKILLS</h2>
    <div class="skills-section">
      <div><strong>Languages:</strong> <%= data.skills.languages.join(', ') %></div>
      <div><strong>Frameworks:</strong> <%= data.skills.frameworks.join(', ') %></div>
      <div><strong>Dev Tools:</strong> <%= data.skills.tools.join(', ') %></div>
      <div><strong>Libraries:</strong> <%= data.skills.libraries.join(', ') %></div>
    </div>
  </div>

</body>
</html>
